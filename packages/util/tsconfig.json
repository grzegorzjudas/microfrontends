{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "rootDir": "src",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es2019",
        "jsx": "react",
        "sourceMap": true,
        "declaration": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "allowJs": true,
        "strict": true,
        "strictNullChecks": false,
        "forceConsistentCasingInFileNames": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "noUnusedLocals": true
    },
    "exclude": [
        "dist/",
        "webpack.config.js"
    ]
}
